<!DOCTYPE html>
<html>

<head>
  <title>Students</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <h1>Students Information</h1>
  <center>
    <table>
      <thead>
        <tr>
          <th>Fullname</th>
          <th>Age</th>
          <th>Gender</th>
          <th>Address</th>
          <th>Course</th>
          <th>Profile Picture</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% student.forEach(student=> { %>
          <tr>
            <td>
              <%= student.fullname %>
            </td>
            <td>
              <%= student.age %>
            </td>
            <td>
              <%= student.gender %>
            </td>
            <td>
              <%= student.address %>
            </td>
            <td>
              <%= student.course %>
            </td>
            <td>
              
              <center><img src="/uploads/<%= student.profile %>"></center>
            </td>
            <td>
              <a href="/update/<%= student.id %>">Edit</a>
              <a href="/delete/<%= student.id %>"
                onclick="return confirm('Are you sure you want to delete this student?')">Delete</a>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <a href="/add" style="margin-top: 15px; width: 150px; background-color: #06cdff; font-weight: bold; color: black;">Add Student</a>
  </center>


</body>

</html>